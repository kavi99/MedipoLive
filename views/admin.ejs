<!DOCTYPE html>
<html lang="en" style="overflow: auto">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
    <link rel="stylesheet" href="main.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <title>Oneriler</title>

</head>

<body>

    <div id="ana">


        <nav class="navbar is-fixed-top" role="navigation" aria-label="dropdown navigation">
            <span style="font-size:25px;cursor:pointer;float:left" onclick="openNav()">&#9776;</span>
            <a class="subtitle is-4">MpChat</a>
            <div id="nick" style="display:none"><%= nick  %></div>
        </nav>

        <div class="columns level-left">

            <div id="mySidenav" class="sidenav">

                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="/admin" class="subtitle is-3">Admin Paneli</a>
                <a href="/AdminUyeList">Üye Listesi</a>
                <a href="/AdminBanList">Banlanan Kullanıcılar</a>
                <a href="/AdminSikayetler">Şikayetler</a>
                <a href="/AdminOneriler">Öneriler</a>
                <a href="/adminhesap">Hesap Bilgilerim</a>
                <% kullanici.forEach(function(user){ %>
                <a name="/adminhesap/<%= user.Id %>" onclick="onay(this.name)">Hesabımı Sil</a>
                <% }); %>

                <a href="/" id="Cikis">Çıkış</a>
                <a href="/onlineListAdmin" style="float: right;" class="subtitle is-5">Aktif : <span
                        id="onlineUser"></span></a><br>

            </div>



        </div>


        <div class="container box" style="padding:10px; margin-top:68px; padding: 2%;">
            <h3 class="subtitle is-5">Hoşgeldiniz <b><%= nick  %></b> / Yönetici Paneli
            </h3>
            <h4 class="subtitle is-4" style="margin-top:30px;color:red;font-size:500"></h4>
            <% MesajSayilari.forEach(function(sayi){ %>

            <div id="liste" style="padding-bottom:3%">

                <div class="list is-hoverable">

                    <a class="list-item" style="padding:2%; margin-bottom:2px; ">
                        <form action="/AdminMesajlariSil" method="POST">
                            <label class="label">Oda Adı </label>

                            <input class="input" readonly value="<%=sayi.OdaAdi%>" id="username" name="odaAdi"
                                type="text">
                            <label class="label">Mesaj Sayısı</label>

                            <input class="input" readonly value="<%=sayi.MesajSayisi%>" id="username" name="MesajSayisi"
                                type="text">

                            <button type="submit" class="button is-danger"
                                style="margin-top:20px;margin-left:15px;">Mesajları Sil</button>


                        </form>

                        <input class="input" type="text" name="sikayetNo2" value="" style="display:none">



                    </a>

                </div>


            </div>

            <% }); %>

        </div>


    </div>

    <div class="modal" id="modalim">
        <div class="modal-background"></div>
        <div class="uyari">
            <div class="card">
                <header class="card-header ">
                    <p class="card-header-title is-centered is-size-4	">
                        Onay
                    </p>
                    <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                        </span>
                    </a>
                </header>
                <div class="card-content">
                    <div class="content">
                        <p class="title is-5">Geri dönüşü olmamak üzere kullanıcıyı banlama işlemini onaylıyor musunuz ?
                        </p>
                        <br>
                    </div>
                </div>
                <footer class="card-footer">
                    <a id="onayButton" class="card-footer-item">Onayla</a>

                    <a id="vazgec" class="card-footer-item">Vazgeç</a>
                </footer>
            </div>
        </div>
        <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.slim.js"></script>
    <script src="AdminSikayetler.js"></script>
    <script>
        localStorage.setItem('Ad',document.getElementById('nick'));
        function Goster() {

            document.getElementById('liste').style.display = 'none';
        }

    </script>
</body>


</html>